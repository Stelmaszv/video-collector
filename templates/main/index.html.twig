{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}
{% block body %}
    <h2>producents</h2>
    {% for el in producents %}
        <div class="card" style="width: 18rem;">
            <img src="{{ asset('producent/' ~ el.id ~ '/' ~  el.avatar) }}" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{el.name}}</h5>
                <p class="card-text">{{el.description}}</p>
                <a href="{{path('show_series_in_producent',{id:el.id})}}" class="btn btn-primary">Go somewhere</a>
            </div>
        </div>
    {% endfor %}
{% endblock %}
