{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}
{% block body %}
    <h2>{{sectionName}}</h2>
    <div class="cradSection">
        {% for el in items %}
            <div class="card">
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe class="embed-responsive-item" src="{{el.muvie_src}}" class="card-img-top" allowfullscreen></iframe>
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{el.name}}</h5>
                    <p class="card-text">{{el.description}}</p>
                    <a href="{{path('show_movie',{id:el.id})}}" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
